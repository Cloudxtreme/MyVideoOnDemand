<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NetflixPersistenceUnit">
        <class>com.entities.Film</class>
        <class>com.entities.Genre</class>
        <class>com.entities.User</class>
        <class>com.entities.Bill</class>
        <class>com.entities.BillRow</class>
        <class>com.entities.Manager</class>
        <class>com.entities.Role</class>
        <class>com.entities.Payment</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/netflix_platform"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>

            <!--<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>-->
            <!--<property name="eclipselink.ddl-generation.output-mode" value="database"/>-->
        </properties>
    </persistence-unit>
</persistence>
